        <item name="item_cycleList_notificationIndicatorBackgroundTint">#D5D5D5</item>

        <item name="itemTextEditor_style_true">#0CE317</item>
        <item name="itemTextEditor_style_false">#EC0808</item>
        <item name="itemTextEditor_style_reset">#E3D40A</item>
    </style>

    <style name="Theme.OpenToday.ItemEditModule" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@drawable/shape</item>
        <item name="android:backgroundTint">#4C858585</item>
        <item name="android:padding">3sp</item>
    </style>


    <!-- Toolbar -->
    <style name="Theme.OpenToday.Toolbar.Root" parent="OpenToday.Base.Toolbar.Root" />
    <style name="Theme.OpenToday.Toolbar.Button" parent="OpenToday.Base.Toolbar.Button">
        <item name="android:backgroundTint">#585858</item>
