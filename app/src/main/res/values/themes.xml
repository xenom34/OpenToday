        <!-- Customize your theme here. -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Main Activity -->
        <item name="androidToolbar_background">#BC7EFF</item>
        <item name="main_currentDate_color">#008465</item>
        <item name="button_settings_dateFormat_color">#14B777</item>

