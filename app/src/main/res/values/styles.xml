<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="OpenToday" />
    <style name="OpenToday.Base" />


    <!-- Toolbar -->
    <style name="OpenToday.Base.Toolbar" />
    <style name="OpenToday.Base.Toolbar.Root" />
    <!-- Toolbar button -->
    <style name="OpenToday.Base.Toolbar.Button" parent="Widget.AppCompat.ButtonBar">
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">0sp</item>
        <item name="android:minHeight">50sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">1sp</item>
        <item name="android:layout_marginRight">1sp</item>
    </style>

    <!-- Section of toolbar -->
    <style name="OpenToday.Base.Toolbar.Section" />
    <style name="OpenToday.Base.Toolbar.Section.Root">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:clickable">false</item>
        <item name="android:paddingStart">10sp</item>
        <item name="android:paddingEnd">10sp</item>
    </style>
    <style name="OpenToday.Base.Toolbar.Section.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:minHeight">48sp</item>
        <item name="android:minWidth">0sp</item>
        <item name="android:layout_marginLeft">1sp</item>
        <item name="android:layout_marginRight">1sp</item>
    </style>
    <style name="OpenToday.Base.Toolbar.Section.Text">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">17sp</item>
</style>

    <!-- Section: File -->
    <style name="OpenToday.Base.Toolbar.Section.Root.File" parent="OpenToday.Base.Toolbar.Section.Root" />
    <style name="OpenToday.Base.Toolbar.Section.Button.File" parent="OpenToday.Base.Toolbar.Section.Button" />

    <!-- Section: Items -->
    <style name="OpenToday.Base.Toolbar.Section.Root.Items" parent="OpenToday.Base.Toolbar.Section.Root" />
    <style name="OpenToday.Base.Toolbar.Section.Button.Items" parent="OpenToday.Base.Toolbar.Section.Button" />
    <!-- Items row -->
    <style name="OpenToday.Base.Toolbar.Section.Include.Items.ItemRow" parent="OpenToday">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2sp</item>
    </style>
    <style name="OpenToday.Base.Toolbar.Section.Root.Items.ItemRow" parent="OpenToday.Base.Toolbar.Section.Root">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/shape</item>
        <item name="android:backgroundTint">#aa000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">1sp</item>
    </style>
    <style name="OpenToday.Base.Toolbar.Section.Button.Items.ItemRow" parent="OpenToday.Base.Toolbar.Section.Button">
        <item name="android:minHeight">0sp</item>
        <item name="android:minWidth">0sp</item>
    </style>
    <style name="OpenToday.Base.Toolbar.Section.Text.Items.ItemRow" parent="OpenToday.Base.Toolbar.Section.Text">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">4sp</item>
    </style>

    <!-- Section: Selection -->
    <style name="OpenToday.Base.Toolbar.Section.Root.Selection" parent="OpenToday.Base.Toolbar.Section.Root" />
    <style name="OpenToday.Base.Toolbar.Section.Button.Selection" parent="OpenToday.Base.Toolbar.Section.Button">
        <item name="android:textSize">13.3sp</item>
        <item name="android:minHeight">44sp</item>
    </style>
    <style name="OpenToday.Base.Toolbar.Section.Text.Selection" parent="OpenToday.Base.Toolbar.Section.Text" />


    <!-- Section: Tabs -->
    <style name="OpenToday.Base.Toolbar.Section.Root.Tabs" parent="OpenToday.Base.Toolbar.Section.Root" />
    <style name="OpenToday.Base.Toolbar.Section.Button.Tabs" parent="OpenToday.Base.Toolbar.Section.Button" />
    <style name="OpenToday.Base.Toolbar.Section.Text.Tabs" parent="OpenToday.Base.Toolbar.Section.Text" />


    <!-- Section: OpenToday -->
    <style name="OpenToday.Base.Toolbar.Section.Root.OpenToday" parent="OpenToday.Base.Toolbar.Section.Root" />
    <style name="OpenToday.Base.Toolbar.Section.Button.OpenToday" parent="OpenToday.Base.Toolbar.Section.Button">
        <item name="android:textAllCaps">true</item>
    </style>


    <!-- About -->
    <style name="OpenToday.Base.About">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="OpenToday.Base.About.Root">
        <item name="android:paddingStart">7sp</item>
        <item name="android:paddingTop">7sp</item>
        <item name="android:paddingEnd">7sp</item>
        <item name="android:paddingBottom">20sp</item>
    </style>
    <style name="OpenToday.Base.About.Title" />
    <style name="OpenToday.Base.About.RowTitle" />
    <style name="OpenToday.Base.About.RowValue" />

    <!-- Settings -->
    <style name="OpenToday.Base.Settings" />
    <style name="OpenToday.Base.Settings.Root">
        <item name="android:paddingStart">7sp</item>
        <item name="android:paddingTop">5sp</item>
        <item name="android:paddingEnd">7sp</item>
        <item name="android:paddingBottom">20sp</item>
    </style>
</resources>