<resources>
    <!-- Base application theme. -->
    <style name="Theme.OpenToday" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">#0B48FF</item>
        <item name="colorPrimaryVariant">#A50065B8</item>
        <item name="colorOnPrimary">#ffffff</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#00B2FF</item>
        <item name="colorSecondaryVariant">#005A8E</item>
        <item name="colorOnSecondary">#000000</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >#000000</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Main Activity -->
        <item name="androidToolbar_background">#201826</item>
        <item name="main_currentDate_color">#00FF9A</item>
        <item name="button_settings_dateFormat_color">#0DAC6D</item>

        <item name="disableBatteryOptimization_backgroundColor">#4D0000</item>
        <item name="disableBatteryOptimization_textColor">#FFFFFF</item>
        <item name="updateAvailable_backgroundColor">#4D0000</item>
        <item name="updateAvailable_textColor">#FFFFFF</item>

        <!-- Items -->
        <item name="item_backgroundColor">#80252525</item>
        <item name="item_textColor">#FFFDFF</item>

        <item name="item_text_background_color">#80252525</item>
        <item name="item_text_textColor">#FFFDFF</item>

        <item name="item_checkbox_backgroundColor">#80252525</item>
        <item name="item_checkbox_textColor">#FFFFFF</item>

        <item name="item_checkbox_day_repeatable_backgroundColor">#80252525</item>
        <item name="item_checkbox_day_repeatable_textColor">#FFFFFF</item>

        <item name="item_cycleList_backgroundColor">#80252525</item>
        <item name="item_cycleList_textColor">#FFFFFF</item>

        <item name="item_counter_backgroundColor">#80252525</item>
        <item name="item_counter_textColor">#FFFFFF</item>

        <item name="item_group_backgroundColor">#80252525</item>
        <item name="item_group_textColor">#FFFFFF</item>

        <item name="item_filterGroup_backgroundColor">#80252525</item>
        <item name="item_filterGroup_textColor">#FFFFFF</item>

        <item name="item_selectionForegroundColor">#BBEC6511</item>
        <item name="toolbar_background">#8C000000</item>
        <item name="itemFilterState_true">#1C9D0E</item>
        <item name="itemFilterState_false">#AA1111</item>
        <item name="itemFilterState_iconColor">#FFFFFF</item>
        <item name="opentoday_icon_tint">#E0E0E0</item>

        <item name="button_settings_openAdvancedSettingsOfOption">#3F51B5</item>
        <item name="button_buttonWithColorIndicator">#673AB7</item>
        <item name="button_dangerActon">#F93838</item>
        <item name="button_dangerActon_background">#243FD8</item>
        <item name="button_exitAction">#243FD8</item>
        <item name="button_applyAction">#07B73F</item>
        <item name="button_importExport">?attr/colorPrimary</item>

        <item name="item_notificationIndicator_default">?attr/opentoday_icon_tint</item>
        <item name="item_notificationIndicator_disabledByTickPolicy">#E10D0D</item>
        <item name="item_cycleList_notificationIndicatorBackgroundTint">#2E2E2E</item>

        <item name="itemTextEditor_style_true">#21BF08</item>
        <item name="itemTextEditor_style_false">#E91811</item>
        <item name="itemTextEditor_style_reset">#B5A900</item>
    </style>


    <!-- Toolbar -->
    <style name="Theme.OpenToday.Toolbar" />
    <style name="Theme.OpenToday.Toolbar.Button" parent="OpenToday.Base.Toolbar.Button">
        <item name="android:backgroundTint">#585858</item>
        <item name="android:textColor">#F5F5F5</item>
    </style>
    <style name="Theme.OpenToday.Toolbar.Button.Selected" parent="Theme.OpenToday.Toolbar.Button">
        <item name="android:backgroundTint">#2046B8</item>
        <item name="android:textColor">#F5F5F5</item>
    </style>

    <!-- Section: Items -->
    <style name="Theme.OpenToday.Toolbar.Section.Root.Items" parent="OpenToday.Base.Toolbar.Section.Root.Items">
        <item name="android:background">@color/toolbar_section_backgroundColor</item>
    </style>
    <style name="Theme.OpenToday.Toolbar.Section.Button.Items.ChangeOnClick" parent="OpenToday.Base.Toolbar.Section.Button.Items">
        <item name="android:backgroundTint">#0B9287</item>
    </style>
    <style name="Theme.OpenToday.Toolbar.Section.Button.Items.ChangeOnLeftSwipe" parent="OpenToday.Base.Toolbar.Section.Button.Items">
        <item name="android:backgroundTint">#0B9287</item>
    </style>
    <!-- Items row -->
    <style name="Theme.OpenToday.Toolbar.Section.Root.Items.ItemRow" parent="OpenToday.Base.Toolbar.Section.Root.Items.ItemRow">
        <item name="android:backgroundTint">#B9000000</item>
    </style>
    <style name="Theme.OpenToday.Toolbar.Section.Button.Items.ItemRow.AddAndEdit" parent="OpenToday.Base.Toolbar.Section.Button.Items.ItemRow">
        <item name="android:backgroundTint">#26C702</item>
    </style>
    <style name="Theme.OpenToday.Toolbar.Section.Button.Items.ItemRow.AddOnly" parent="OpenToday.Base.Toolbar.Section.Button.Items.ItemRow">
        <item name="android:backgroundTint">#014CD7</item>
    </style>
    <style name="Theme.OpenToday.Toolbar.Section.Button.Items.ItemRow.Description" parent="OpenToday.Base.Toolbar.Section.Button.Items.ItemRow">
        <item name="android:backgroundTint">#FA9918EF</item>
    </style>
    <style name="Theme.OpenToday.Toolbar.Section.Text.Items.ItemRow" parent="OpenToday.Base.Toolbar.Section.Text.Items.ItemRow">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Section: File -->
    <item name="toolbar_section_backgroundColor" type="color">#BE161616</item>
    <style name="Theme.OpenToday.Toolbar.Section.Root.File" parent="OpenToday.Base.Toolbar.Section.Root.File">
        <item name="android:background">@color/toolbar_section_backgroundColor</item>
    </style>
    <style name="Theme.OpenToday.Toolbar.Section.Button.File.ImportFromClipboard" parent="OpenToday.Base.Toolbar.Section.Button.File">
        <item name="android:backgroundTint">#10EBCC</item>
    </style>
    <style name="Theme.OpenToday.Toolbar.Section.Button.File.Import" parent="OpenToday.Base.Toolbar.Section.Button.File">
        <item name="android:backgroundTint">?attr/button_importExport</item>
    </style>
    <style name="Theme.OpenToday.Toolbar.Section.Button.File.SaveAll" parent="OpenToday.Base.Toolbar.Section.Button.File">
        <item name="android:backgroundTint">?attr/button_applyAction</item>
        <item name="drawableEndCompat">@drawable/save_24px</item>
    </style>

    <!-- Section: OpenToday -->
    <style name="Theme.OpenToday.Toolbar.Section.Root.OpenToday" parent="OpenToday.Base.Toolbar.Section.Root.OpenToday">
        <item name="android:background">@color/toolbar_section_backgroundColor</item>
    </style>
    <style name="Theme.OpenToday.Toolbar.Section.Button.OpenToday.ToggleLogsOverlay" parent="OpenToday.Base.Toolbar.Section.Button.OpenToday">
        <item name="android:backgroundTint">#2B2B2B</item>
    </style>
    <style name="Theme.OpenToday.Toolbar.Section.Button.OpenToday.Calendar" parent="OpenToday.Base.Toolbar.Section.Button.OpenToday">
        <item name="android:backgroundTint">?attr/button_settings_dateFormat_color</item>
        <item name="icon">@drawable/calendar_clock_24px</item>
    </style>
    <style name="Theme.OpenToday.Toolbar.Section.Button.OpenToday.Settings" parent="OpenToday.Base.Toolbar.Section.Button.OpenToday">
        <item name="android:backgroundTint">#1B14DE</item>
        <item name="icon">@drawable/tune_24px</item>
    </style>
    <style name="Theme.OpenToday.Toolbar.Section.Button.OpenToday.About" parent="OpenToday.Base.Toolbar.Section.Button.OpenToday">
        <item name="android:backgroundTint">#009E3D</item>
        <item name="icon">@drawable/info_i_24px</item>
    </style>

    <!-- Section: Selection -->
    <style name="Theme.OpenToday.Toolbar.Section.Root.Selection" parent="OpenToday.Base.Toolbar.Section.Root.Selection">
        <item name="android:background">@color/toolbar_section_backgroundColor</item>
    </style>
    <style name="Theme.OpenToday.Toolbar.Section.Button.Selection.ExportSelected" parent="OpenToday.Base.Toolbar.Section.Button.Selection">
        <item name="android:backgroundTint">#9219BF</item>
    </style>
    <style name="Theme.OpenToday.Toolbar.Section.Button.Selection.DeselectAll" parent="OpenToday.Base.Toolbar.Section.Button.Selection">
        <item name="android:backgroundTint">#179764</item>
    </style>
    <style name="Theme.OpenToday.Toolbar.Section.Button.Selection.Delete" parent="OpenToday.Base.Toolbar.Section.Button.Selection">
        <item name="android:backgroundTint">#B31616</item>
        <item name="drawableEndCompat">@drawable/delete_24px</item>
    </style>
    <style name="Theme.OpenToday.Toolbar.Section.Button.Selection.MoveHere" parent="OpenToday.Base.Toolbar.Section.Button.Selection">
        <item name="android:backgroundTint">#1378B2</item>
    </style>
    <style name="Theme.OpenToday.Toolbar.Section.Button.Selection.CopyHere" parent="OpenToday.Base.Toolbar.Section.Button.Selection">
        <item name="android:backgroundTint">#174484</item>
    </style>
    <style name="Theme.OpenToday.Toolbar.Section.Button.Selection.Edit" parent="OpenToday.Base.Toolbar.Section.Button.Selection">
        <item name="android:backgroundTint">#511AF2</item>
    </style>
    <style name="Theme.OpenToday.Toolbar.Section.Text.Selection.Info" parent="OpenToday.Base.Toolbar.Section.Text.Selection">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">19sp</item>
    </style>

    <!-- Section: Tabs -->
    <style name="Theme.OpenToday.Toolbar.Section.Root.Tabs" parent="OpenToday.Base.Toolbar.Section.Root.Tabs">
        <item name="android:background">@color/toolbar_section_backgroundColor</item>
    </style>
    <style name="Theme.OpenToday.Toolbar.Section.Text.Tabs.TabsListTitle" parent="OpenToday.Base.Toolbar.Section.Text.Tabs">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/shape</item>
        <item name="android:backgroundTint">#E1000000</item>
        <item name="android:padding">2sp</item>
    </style>
    <style name="Theme.OpenToday.Toolbar.Section.Button.Tabs.Add" parent="OpenToday.Base.Toolbar.Section.Button.Tabs">
        <item name="android:backgroundTint">#1DC2F4</item>
        <item name="android:src">@android:drawable/ic_input_add</item>
        <item name="android:layout_marginEnd">5sp</item>
        <item name="android:layout_marginTop">5sp</item>
    </style>

    <!-- About -->
    <style name="Theme.OpenToday.About" parent="OpenToday.Base.About" />
    <style name="Theme.OpenToday.About.Root" parent="OpenToday.Base.About.Root" />
    <style name="Theme.OpenToday.About.Title" parent="OpenToday.Base.About.Title">
        <item name="android:textColor">#15F199</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="Theme.OpenToday.About.RowTitle">
        <item name="android:textColor">#EDEDED</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Theme.OpenToday.About.RowValue">
        <item name="android:textColor">#BEBEBE</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!-- Settings -->
    <style name="Theme.OpenToday.Settings" parent="OpenToday.Base.Settings" />
    <style name="Theme.OpenToday.Settings.Root" parent="OpenToday.Base.Settings.Root" />

    <!-- FragmentItemsTabInclude -->
    <style name="Theme.OpenToday.ItemsTabInclude" />
    <style name="Theme.OpenToday.ItemsTabInclude.Root">
        <item name="android:background">#0DFFFFFF</item>
    </style>
    <style name="Theme.OpenToday.ItemsTabInclude.Input">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="Theme.OpenToday.ItemsTabInclude.Enter">
        <item name="android:backgroundTint">#0B9793</item>
    </style>
</resources>